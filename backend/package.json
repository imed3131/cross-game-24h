{
  "name": "crossword-backend",
  "version": "1.0.0",
  "description": "Backend for Modern Crossword Game Platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "prisma generate && prisma db push",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma db push --force-reset && npm run db:seed"
  },
  "dependencies": {
    "express": "^4.18.2",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "crossword",
    "game",
    "express",
    "prisma"
  ],
  "author": "Crossword Game Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
